	public static boolean verifyText(String element ,String text){
		List<WebElement> elements=getWebDriver().findElements(By.xpath(element));
		if(elements.size()!=0)
		{
			for(WebElement t:elements){
				String s=t.getText();
				if(s.contains(text)){
					return true;
				}
			}
		}
		return false;
	}
	
